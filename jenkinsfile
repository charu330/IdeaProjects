pipeline {
     agent any {
     tools {
             maven "mvn"
         }
     }

     stages {
     stage ('compile stage') {
          steps {
                    withMaven(maven:'latestMaven') {
                    sh 'mvn clean compile'
                    }
          }
     }

     stage ('Testing Stage') {

              steps {
                                  withMaven(maven:'latestMaven') {
                                  sh 'mvn test'
                                  }
                        }
     }

     stage ('Deployment stage') {

            steps {
                            withMaven(maven:'latestMaven') {
                               sh 'mvn clean package'
                            }
            }
     }


     }
}